<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ApprovalProcessesMapper">
    
    <resultMap type="ApprovalProcesses" id="ApprovalProcessesResult">
        <result property="id"    column="id"    />
        <result property="processName"    column="process_name"    />
        <result property="processCode"    column="process_code"    />
        <result property="description"    column="description"    />
        <result property="category"    column="category"    />
        <result property="version"    column="version"    />
        <result property="isActive"    column="is_active"    />
        <result property="creatorId"    column="creator_id"    />
        <result property="minApprovers"    column="min_approvers"    />
        <result property="approvalStrategy"    column="approval_strategy"    />
        <result property="createdAt"    column="created_at"    />
        <result property="updatedAt"    column="updated_at"    />
    </resultMap>

    <sql id="selectApprovalProcessesVo">
        select id, process_name, process_code, description, category, version, is_active, creator_id, min_approvers, approval_strategy, created_at, updated_at from approval_processes
    </sql>

    <select id="selectApprovalProcessesList" parameterType="ApprovalProcesses" resultMap="ApprovalProcessesResult">
        <include refid="selectApprovalProcessesVo"/>
        <where>  
            <if test="processName != null  and processName != ''"> and process_name like concat('%', #{processName}, '%')</if>
            <if test="processCode != null  and processCode != ''"> and process_code = #{processCode}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="category != null  and category != ''"> and category = #{category}</if>
            <if test="version != null "> and version = #{version}</if>
            <if test="isActive != null "> and is_active = #{isActive}</if>
            <if test="creatorId != null "> and creator_id = #{creatorId}</if>
            <if test="minApprovers != null "> and min_approvers = #{minApprovers}</if>
            <if test="approvalStrategy != null  and approvalStrategy != ''"> and approval_strategy = #{approvalStrategy}</if>
            <if test="createdAt != null "> and created_at = #{createdAt}</if>
            <if test="updatedAt != null "> and updated_at = #{updatedAt}</if>
        </where>
    </select>
    
    <select id="selectApprovalProcessesById" parameterType="Long" resultMap="ApprovalProcessesResult">
        <include refid="selectApprovalProcessesVo"/>
        where id = #{id}
    </select>

    <insert id="insertApprovalProcesses" parameterType="ApprovalProcesses" useGeneratedKeys="true" keyProperty="id">
        insert into approval_processes
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="processName != null and processName != ''">process_name,</if>
            <if test="processCode != null and processCode != ''">process_code,</if>
            <if test="description != null">description,</if>
            <if test="category != null and category != ''">category,</if>
            <if test="version != null">version,</if>
            <if test="isActive != null">is_active,</if>
            <if test="creatorId != null">creator_id,</if>
            <if test="minApprovers != null">min_approvers,</if>
            <if test="approvalStrategy != null">approval_strategy,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="processName != null and processName != ''">#{processName},</if>
            <if test="processCode != null and processCode != ''">#{processCode},</if>
            <if test="description != null">#{description},</if>
            <if test="category != null and category != ''">#{category},</if>
            <if test="version != null">#{version},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="creatorId != null">#{creatorId},</if>
            <if test="minApprovers != null">#{minApprovers},</if>
            <if test="approvalStrategy != null">#{approvalStrategy},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
         </trim>
    </insert>

    <update id="updateApprovalProcesses" parameterType="ApprovalProcesses">
        update approval_processes
        <trim prefix="SET" suffixOverrides=",">
            <if test="processName != null and processName != ''">process_name = #{processName},</if>
            <if test="processCode != null and processCode != ''">process_code = #{processCode},</if>
            <if test="description != null">description = #{description},</if>
            <if test="category != null and category != ''">category = #{category},</if>
            <if test="version != null">version = #{version},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            <if test="creatorId != null">creator_id = #{creatorId},</if>
            <if test="minApprovers != null">min_approvers = #{minApprovers},</if>
            <if test="approvalStrategy != null">approval_strategy = #{approvalStrategy},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteApprovalProcessesById" parameterType="Long">
        delete from approval_processes where id = #{id}
    </delete>

    <delete id="deleteApprovalProcessesByIds" parameterType="String">
        delete from approval_processes where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>